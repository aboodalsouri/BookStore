@model SignInModel
@{ Layout = "~/Views/Shared/Layout.cshtml"; }

@section Body{
    <form method="post">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    @ViewData["errorMessage"]
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label class="control-label">Username</label>
                        <input type="text" class="form-control" asp-for="Username" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label class="control-label">Password</label>
                        <input type="password" class="form-control" asp-for="Password" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <input type="checkbox" class="checkbox" asp-for="RemeberMe" />
                        <label class="form-check-label">Remember me</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" asp-action="CheckPassword" />
                    </div>
                </div>
            </div>
        </div>
    </form>
}