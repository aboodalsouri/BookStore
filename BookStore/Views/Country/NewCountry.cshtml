@model VMCountry
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Body{
    <form method="post">
        <div class="row" style="margin-top:15px">
            <div class="col-lg-1"><span>Country</span></div>
            <div class="col-lg-12">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Country</th>
                            <th>Nationality</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Country item in Model.licountrys)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Nationality</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <span>Name</span>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" asp-for="Country.Name" />
                <input type="text" class="form-control" asp-for="Country.Nationality" />
            </div>
            <div class="col-md-2">
                <input type="submit" value="Save" asp-action="Save" />
            </div>
        </div>
    </form>
}

